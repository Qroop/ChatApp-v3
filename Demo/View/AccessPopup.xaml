<Window x:Class="ChatApp.View.AccessPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatApp.View"
        mc:Ignorable="d"
        Title="AccessPopup" Height="200" Width="200">
    <Grid>
        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16" Height="50" Text="Grant access to:" />
        <TextBlock Text="{Binding Path=Username}" VerticalAlignment="Center" HorizontalAlignment="Center" Height="20"/>
        <Button Height="50" Width="150" HorizontalAlignment="Center" VerticalAlignment="Top" Background="Olive" x:Name="ButtonYes" Content="Yes" Command="{Binding Path=Accept}"/>
        <Button Height="50" Width="150" HorizontalAlignment="Center" VerticalAlignment="Bottom" Background="DarkRed" x:Name="ButtonNo" Content="No" Command="{Binding Path=Decline}"/>
    </Grid>
</Window>
