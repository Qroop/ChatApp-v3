<Window x:Class="ChatApp.View.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:ChatApp.View"
        mc:Ignorable="d" 
        Height="450" Width="800"
        Title="Chat">

    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Sidebar for friends list -->
            <ColumnDefinition Width="200"/>
            <!-- Chat area -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Friends List Sidebar -->
        <StackPanel Grid.Column="0" Background="DarkGray">
            <TextBlock Text="Friends" 
                       FontSize="16" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       Margin="0,0,0,10"/>

            <ListBox Name="FriendsList" 
                     Background="#3A3C3E" 
                     Foreground="White" 
                     BorderThickness="0">
                <!-- Sample friends, you can bind actual data here -->
                <!-- <ListBoxItem Content="Alice" />
                <ListBoxItem Content="Bob" />
                <ListBoxItem Content="Charlie" />
                <ListBoxItem Content="Diana" /> -->
            </ListBox>
        </StackPanel>

        <!-- Chat Window -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <!-- Chat messages area -->
                <RowDefinition Height="*"/>
                <!-- Input area for sending messages -->
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Chat Messages Display Area -->
            <ScrollViewer Grid.Row="0" Background="White" VerticalScrollBarVisibility="Auto" Name="ChatBox">
                <StackPanel Name="ChatMessages" Margin="10">
                    <TextBlock Text="{Binding Path=ChattingWith, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <ListBox ItemsSource="{Binding Messages}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding Sender}"/>
                                    <TextBlock Text="{Binding Content}"/>
                                    <TextBlock Text="{Binding Timestamp}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <!-- Sample message bubbles, replace with actual message binding -->
                    <!--<Border Background="#fafad2" CornerRadius="10" Margin="0,5,50,5">
                        <TextBlock Text="Hello, how are you?" FontSize="14"/>
                    </Border>
                    <Border Background="#C7FFC9" CornerRadius="10" Margin="50,5,0,5">
                        <TextBlock Text="I'm good, thanks! How about you?" FontSize="14"/>
                    </Border>-->
                </StackPanel>
            </ScrollViewer>

            <!-- Message Input Area -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Background="#EDEDED">
                <TextBox Name="MessageInput" VerticalAlignment="Center" 
                         Margin="0,0,10,0" Height="30" Width="500" 
                         VerticalContentAlignment="Center"
                         Background="White" 
                         BorderBrush="#cccccc" Text="{Binding Path=Message, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                <Button Content="Send" Width="70" Height="30" VerticalAlignment="Center" 
                        Background="#007ACC" Foreground="White" 
                        BorderBrush="Transparent" Command="{Binding Path=SendMessage}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
